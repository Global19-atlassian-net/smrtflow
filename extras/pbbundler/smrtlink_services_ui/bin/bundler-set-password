#!/usr/bin/env bash

__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
rootBundleDir=$(dirname "${__dir}")

config=${rootBundleDir}/smrtlink-system-config.json

if ! [ -e "$config" ]; then
    echo "file ${config} does not exist"
    exit 1
fi

export JAVA_OPTS="-Dconfig.file=${config}"

${rootBundleDir}/tools/bin/bundler-apply-config "${rootBundleDir} $@"
