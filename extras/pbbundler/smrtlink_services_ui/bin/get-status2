#!/usr/bin/env bash
# Thin wrapper to call the scala admin tools in <BUNDLE_ROOT>/tools/bin

__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# this needs to be pulled from the config. Probably need to rethink this
#logdir=${__dir}/../logs/get-status2.log

config=${__dir}/../smrtlink-system-config.json

if ! [ -e "$config" ]; then
    echo "file ${config} does not exist"
    exit 1
fi

export JAVA_OPTS="-Dconfig.file=${config}"
${__dir}/../tools/bin/bundler-get-status "$@"

