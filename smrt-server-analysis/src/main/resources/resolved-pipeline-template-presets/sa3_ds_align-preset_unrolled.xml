<?xml version="1.0" ?>
<pipeline-template-preset id="pbsmrtpipe.pipeline_presets.sa3_ds_align_unrolled" pipeline-id="pbsmrtpipe.pipelines.sa3_ds_align">

    <!-- For Official pipeline presets, the Pbsmrtpipe Engine Options should NOT be overridden -->
    <options />

    <!-- Default override for task options -->
    <task-options>
        <option id="pbalign.task_options.no_split_subreads">
            <value>True</value>
        </option>
        <option id="pbalign.task_options.hit_policy">
            <value>leftmost</value>
        </option>
        <option id="pbalign.task_options.concordant">
            <value>False</value>
        </option>
        <option id="pbalign.task_options.algorithm_options">
            <value>-bestn 1 -forwardOnly -fastMaxInterval -maxAnchorsPerPosition 30000 -ignoreHQRegions -minPctIdentity 60</value>
        </option>
    </task-options>

</pipeline-template-preset>
